{
  "$defs": {
    "ConfigType": {
      "enum": [
        "bool",
        "string",
        "int",
        "uint",
        "decimal",
        "timezone",
        "time",
        "complex"
      ],
      "type": "string"
    },
    "DomainConfigValue": {
      "description": "Represents a domain config value that can be either plaintext or encrypted.",
      "oneOf": [
        {
          "properties": {
            "type": {
              "const": "plain",
              "type": "string"
            },
            "value": true
          },
          "required": [
            "type",
            "value"
          ],
          "type": "object"
        },
        {
          "$ref": "#/$defs/Encrypted",
          "properties": {
            "type": {
              "const": "encrypted",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "properties": {
            "type": {
              "const": "rotated",
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        }
      ]
    },
    "Encrypted": {
      "properties": {
        "ciphertext": {
          "items": {
            "format": "uint8",
            "maximum": 255,
            "minimum": 0,
            "type": "integer"
          },
          "type": "array"
        },
        "nonce": {
          "items": {
            "format": "uint8",
            "maximum": 255,
            "minimum": 0,
            "type": "integer"
          },
          "type": "array"
        }
      },
      "required": [
        "ciphertext",
        "nonce"
      ],
      "type": "object"
    },
    "Visibility": {
      "enum": [
        "exposed",
        "internal"
      ],
      "type": "string"
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "properties": {
        "config_type": {
          "$ref": "#/$defs/ConfigType"
        },
        "encrypted": {
          "type": "boolean"
        },
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "key": {
          "type": "string"
        },
        "type": {
          "const": "initialized",
          "type": "string"
        },
        "visibility": {
          "$ref": "#/$defs/Visibility"
        }
      },
      "required": [
        "type",
        "id",
        "key",
        "config_type",
        "visibility",
        "encrypted"
      ],
      "type": "object"
    },
    {
      "properties": {
        "type": {
          "const": "updated",
          "type": "string"
        },
        "value": {
          "$ref": "#/$defs/DomainConfigValue"
        }
      },
      "required": [
        "type",
        "value"
      ],
      "type": "object"
    }
  ],
  "title": "DomainConfigEvent"
}
