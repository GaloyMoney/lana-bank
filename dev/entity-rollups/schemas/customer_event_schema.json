{
  "$defs": {
    "Activity": {
      "enum": [
        "inactive",
        "active",
        "suspended"
      ],
      "type": "string"
    },
    "CustomerType": {
      "enum": [
        "Individual",
        "GovernmentEntity",
        "PrivateCompany",
        "Bank",
        "FinancialInstitution",
        "ForeignAgencyOrSubsidiary",
        "NonDomiciledCompany"
      ],
      "type": "string"
    },
    "KycLevel": {
      "enum": [
        "NotKyced",
        "Basic",
        "Advanced"
      ],
      "type": "string"
    },
    "KycVerification": {
      "enum": [
        "no-kyc",
        "verified",
        "rejected"
      ],
      "type": "string"
    },
    "PersonalInfo": {
      "properties": {
        "address": {
          "type": [
            "string",
            "null"
          ]
        },
        "dateOfBirth": {
          "type": [
            "string",
            "null"
          ]
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "nationality": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "firstName",
        "lastName"
      ],
      "type": "object"
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "properties": {
        "activity": {
          "$ref": "#/$defs/Activity"
        },
        "applicant_id": {
          "type": "string"
        },
        "customer_type": {
          "$ref": "#/$defs/CustomerType"
        },
        "email": {
          "type": "string"
        },
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "kyc_verification": {
          "$ref": "#/$defs/KycVerification",
          "default": "no-kyc"
        },
        "level": {
          "$ref": "#/$defs/KycLevel",
          "default": "NotKyced"
        },
        "personal_info": {
          "$ref": "#/$defs/PersonalInfo",
          "default": {
            "address": null,
            "dateOfBirth": null,
            "firstName": "John",
            "lastName": "Doe",
            "nationality": null
          }
        },
        "public_id": {
          "type": "string"
        },
        "telegram_handle": {
          "type": "string"
        },
        "type": {
          "const": "initialized",
          "type": "string"
        }
      },
      "required": [
        "type",
        "id",
        "email",
        "telegram_handle",
        "customer_type",
        "activity",
        "public_id",
        "applicant_id"
      ],
      "type": "object"
    },
    {
      "properties": {
        "telegram_handle": {
          "type": "string"
        },
        "type": {
          "const": "telegram_handle_updated",
          "type": "string"
        }
      },
      "required": [
        "type",
        "telegram_handle"
      ],
      "type": "object"
    },
    {
      "properties": {
        "email": {
          "type": "string"
        },
        "type": {
          "const": "email_updated",
          "type": "string"
        }
      },
      "required": [
        "type",
        "email"
      ],
      "type": "object"
    },
    {
      "properties": {
        "activity": {
          "$ref": "#/$defs/Activity"
        },
        "type": {
          "const": "activity_updated",
          "type": "string"
        }
      },
      "required": [
        "type",
        "activity"
      ],
      "type": "object"
    },
    {
      "properties": {
        "type": {
          "const": "kyc_rejected",
          "type": "string"
        }
      },
      "required": [
        "type"
      ],
      "type": "object"
    },
    {
      "properties": {
        "personal_info": {
          "$ref": "#/$defs/PersonalInfo"
        },
        "type": {
          "const": "personal_info_updated",
          "type": "string"
        }
      },
      "required": [
        "type",
        "personal_info"
      ],
      "type": "object"
    }
  ],
  "title": "CustomerEvent"
}
