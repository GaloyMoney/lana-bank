{
  "$defs": {
    "Activity": {
      "enum": [
        "inactive",
        "active",
        "suspended"
      ],
      "type": "string"
    },
    "CustomerType": {
      "enum": [
        "Individual",
        "GovernmentEntity",
        "PrivateCompany",
        "Bank",
        "FinancialInstitution",
        "ForeignAgencyOrSubsidiary",
        "NonDomiciledCompany"
      ],
      "type": "string"
    },
    "KycLevel": {
      "enum": [
        "NotKyced",
        "Basic",
        "Advanced"
      ],
      "type": "string"
    },
    "KycVerification": {
      "enum": [
        "pending-verification",
        "verified",
        "rejected"
      ],
      "type": "string"
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "properties": {
        "activity": {
          "$ref": "#/$defs/Activity"
        },
        "applicant_id": {
          "type": "string"
        },
        "customer_type": {
          "$ref": "#/$defs/CustomerType"
        },
        "email": {
          "type": "string"
        },
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "kyc_verification": {
          "$ref": "#/$defs/KycVerification",
          "default": "pending-verification"
        },
        "level": {
          "$ref": "#/$defs/KycLevel",
          "default": "NotKyced"
        },
        "public_id": {
          "type": "string"
        },
        "telegram_handle": {
          "type": "string"
        },
        "type": {
          "const": "initialized",
          "type": "string"
        }
      },
      "required": [
        "type",
        "id",
        "email",
        "telegram_handle",
        "customer_type",
        "activity",
        "public_id",
        "applicant_id"
      ],
      "type": "object"
    },
    {
      "properties": {
        "telegram_handle": {
          "type": "string"
        },
        "type": {
          "const": "telegram_handle_updated",
          "type": "string"
        }
      },
      "required": [
        "type",
        "telegram_handle"
      ],
      "type": "object"
    },
    {
      "properties": {
        "email": {
          "type": "string"
        },
        "type": {
          "const": "email_updated",
          "type": "string"
        }
      },
      "required": [
        "type",
        "email"
      ],
      "type": "object"
    },
    {
      "properties": {
        "activity": {
          "$ref": "#/$defs/Activity"
        },
        "type": {
          "const": "activity_updated",
          "type": "string"
        }
      },
      "required": [
        "type",
        "activity"
      ],
      "type": "object"
    },
    {
      "properties": {
        "applicant_id": {
          "type": "string"
        },
        "type": {
          "const": "kyc_rejected",
          "type": "string"
        }
      },
      "required": [
        "type",
        "applicant_id"
      ],
      "type": "object"
    }
  ],
  "title": "CustomerEvent"
}
