{
  "$defs": {
    "DepositStatus": {
      "enum": [
        "Confirmed",
        "Reverted"
      ],
      "type": "string"
    },
    "UsdCents": {
      "format": "uint64",
      "minimum": 0,
      "type": "integer"
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "properties": {
        "amount": {
          "$ref": "#/$defs/UsdCents"
        },
        "deposit_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "public_id": {
          "type": "string"
        },
        "reference": {
          "type": "string"
        },
        "status": {
          "$ref": "#/$defs/DepositStatus"
        },
        "type": {
          "const": "initialized",
          "type": "string"
        }
      },
      "required": [
        "type",
        "id",
        "ledger_tx_id",
        "deposit_account_id",
        "amount",
        "reference",
        "status",
        "public_id"
      ],
      "type": "object"
    },
    {
      "properties": {
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "status": {
          "$ref": "#/$defs/DepositStatus"
        },
        "type": {
          "const": "reverted",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "status"
      ],
      "type": "object"
    }
  ],
  "title": "DepositEvent"
}
