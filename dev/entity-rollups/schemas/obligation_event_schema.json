{
  "$defs": {
    "EffectiveDate": {
      "format": "date",
      "type": "string"
    },
    "ObligationAccounts": {
      "properties": {
        "account_to_be_credited_id": {
          "format": "uuid",
          "type": "string"
        },
        "receivable_account_id": {
          "format": "uuid",
          "type": "string"
        }
      },
      "required": [
        "receivable_account_id",
        "account_to_be_credited_id"
      ],
      "type": "object"
    },
    "ObligationType": {
      "enum": [
        "Disbursal",
        "Interest"
      ],
      "type": "string"
    },
    "UsdCents": {
      "format": "uint64",
      "minimum": 0,
      "type": "integer"
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "properties": {
        "amount": {
          "$ref": "#/$defs/UsdCents"
        },
        "credit_facility_id": {
          "format": "uuid",
          "type": "string"
        },
        "defaulted_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "defaulted_date": {
          "anyOf": [
            {
              "$ref": "#/$defs/EffectiveDate"
            },
            {
              "type": "null"
            }
          ]
        },
        "due_accounts": {
          "$ref": "#/$defs/ObligationAccounts"
        },
        "due_date": {
          "$ref": "#/$defs/EffectiveDate"
        },
        "effective": {
          "format": "date",
          "type": "string"
        },
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "in_liquidation_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "liquidation_date": {
          "anyOf": [
            {
              "$ref": "#/$defs/EffectiveDate"
            },
            {
              "type": "null"
            }
          ]
        },
        "not_yet_due_accounts": {
          "$ref": "#/$defs/ObligationAccounts"
        },
        "obligation_type": {
          "$ref": "#/$defs/ObligationType"
        },
        "overdue_accounts": {
          "$ref": "#/$defs/ObligationAccounts"
        },
        "overdue_date": {
          "anyOf": [
            {
              "$ref": "#/$defs/EffectiveDate"
            },
            {
              "type": "null"
            }
          ]
        },
        "reference": {
          "type": "string"
        },
        "type": {
          "const": "initialized",
          "type": "string"
        }
      },
      "required": [
        "type",
        "id",
        "credit_facility_id",
        "obligation_type",
        "amount",
        "reference",
        "ledger_tx_id",
        "not_yet_due_accounts",
        "due_accounts",
        "overdue_accounts",
        "in_liquidation_account_id",
        "defaulted_account_id",
        "due_date",
        "effective"
      ],
      "type": "object"
    },
    {
      "properties": {
        "due_amount": {
          "$ref": "#/$defs/UsdCents"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "due_recorded",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "due_amount"
      ],
      "type": "object"
    },
    {
      "properties": {
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "overdue_amount": {
          "$ref": "#/$defs/UsdCents"
        },
        "type": {
          "const": "overdue_recorded",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "overdue_amount"
      ],
      "type": "object"
    },
    {
      "properties": {
        "defaulted_amount": {
          "$ref": "#/$defs/UsdCents"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "defaulted_recorded",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "defaulted_amount"
      ],
      "type": "object"
    },
    {
      "properties": {
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "payment_allocation_amount": {
          "$ref": "#/$defs/UsdCents"
        },
        "payment_allocation_id": {
          "format": "uuid",
          "type": "string"
        },
        "payment_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "payment_allocated",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "payment_id",
        "payment_allocation_id",
        "payment_allocation_amount"
      ],
      "type": "object"
    },
    {
      "properties": {
        "effective": {
          "format": "date",
          "type": "string"
        },
        "initial_amount": {
          "$ref": "#/$defs/UsdCents"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "liquidation_process_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "liquidation_process_started",
          "type": "string"
        }
      },
      "required": [
        "type",
        "liquidation_process_id",
        "ledger_tx_id",
        "effective",
        "initial_amount"
      ],
      "type": "object"
    },
    {
      "properties": {
        "liquidation_process_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "liquidation_process_concluded",
          "type": "string"
        }
      },
      "required": [
        "type",
        "liquidation_process_id"
      ],
      "type": "object"
    },
    {
      "properties": {
        "effective": {
          "format": "date",
          "type": "string"
        },
        "type": {
          "const": "completed",
          "type": "string"
        }
      },
      "required": [
        "type",
        "effective"
      ],
      "type": "object"
    }
  ],
  "title": "ObligationEvent"
}
