{
  "$defs": {
    "CollateralDirection": {
      "enum": [
        "Add",
        "Remove"
      ],
      "type": "string"
    },
    "CollateralLedgerAccountIds": {
      "properties": {
        "collateral_account_id": {
          "description": "Holds BTC collateral for this credit facility.",
          "format": "uuid",
          "type": "string"
        },
        "collateral_in_liquidation_account_id": {
          "description": "Holds BTC collateral for this credit facility, that is being\nliquidated.",
          "format": "uuid",
          "type": "string"
        },
        "liquidated_collateral_account_id": {
          "description": "Holds BTC collateral for this credit facility, that has\nalready been liquidated.",
          "format": "uuid",
          "type": "string"
        }
      },
      "required": [
        "collateral_account_id",
        "liquidated_collateral_account_id",
        "collateral_in_liquidation_account_id"
      ],
      "type": "object"
    },
    "FacilityLedgerAccountIdsForLiquidation": {
      "description": "Facility-level account IDs needed by the Collateral entity for liquidation operations.",
      "properties": {
        "payment_holding_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "proceeds_from_liquidation_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "uncovered_outstanding_account_id": {
          "format": "uuid",
          "type": "string"
        }
      },
      "required": [
        "proceeds_from_liquidation_account_id",
        "payment_holding_account_id",
        "uncovered_outstanding_account_id"
      ],
      "type": "object"
    },
    "Satoshis": {
      "format": "uint64",
      "minimum": 0,
      "type": "integer"
    },
    "UsdCents": {
      "format": "uint64",
      "minimum": 0,
      "type": "integer"
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "properties": {
        "account_ids": {
          "$ref": "#/$defs/CollateralLedgerAccountIds"
        },
        "custody_wallet_id": {
          "format": "uuid",
          "type": [
            "string",
            "null"
          ]
        },
        "facility_ledger_account_ids_for_liquidation": {
          "$ref": "#/$defs/FacilityLedgerAccountIdsForLiquidation"
        },
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "secured_loan_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "initialized",
          "type": "string"
        }
      },
      "required": [
        "type",
        "id",
        "secured_loan_id",
        "account_ids",
        "facility_ledger_account_ids_for_liquidation"
      ],
      "type": "object"
    },
    {
      "properties": {
        "abs_diff": {
          "$ref": "#/$defs/Satoshis"
        },
        "collateral_amount": {
          "$ref": "#/$defs/Satoshis"
        },
        "direction": {
          "$ref": "#/$defs/CollateralDirection"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "updated_via_manual_input",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "collateral_amount",
        "abs_diff",
        "direction"
      ],
      "type": "object"
    },
    {
      "properties": {
        "abs_diff": {
          "$ref": "#/$defs/Satoshis"
        },
        "collateral_amount": {
          "$ref": "#/$defs/Satoshis"
        },
        "direction": {
          "$ref": "#/$defs/CollateralDirection"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "updated_via_custodian_sync",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "collateral_amount",
        "abs_diff",
        "direction"
      ],
      "type": "object"
    },
    {
      "properties": {
        "abs_diff": {
          "$ref": "#/$defs/Satoshis"
        },
        "collateral_amount": {
          "$ref": "#/$defs/Satoshis"
        },
        "direction": {
          "$ref": "#/$defs/CollateralDirection"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "liquidation_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "updated_via_liquidation",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "liquidation_id",
        "collateral_amount",
        "abs_diff",
        "direction"
      ],
      "type": "object"
    },
    {
      "properties": {
        "liquidation_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "liquidation_started",
          "type": "string"
        }
      },
      "required": [
        "type",
        "liquidation_id"
      ],
      "type": "object"
    },
    {
      "properties": {
        "amount": {
          "$ref": "#/$defs/UsdCents"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "liquidation_id": {
          "format": "uuid",
          "type": "string"
        },
        "payment_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "liquidation_proceeds_received",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "payment_id",
        "liquidation_id",
        "amount"
      ],
      "type": "object"
    },
    {
      "properties": {
        "liquidation_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "liquidation_completed",
          "type": "string"
        }
      },
      "required": [
        "type",
        "liquidation_id"
      ],
      "type": "object"
    }
  ],
  "title": "CollateralEvent"
}
