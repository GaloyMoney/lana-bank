{
  "$defs": {
    "CollateralAction": {
      "enum": [
        "Add",
        "Remove"
      ],
      "type": "string"
    },
    "Satoshis": {
      "format": "uint64",
      "minimum": 0,
      "type": "integer"
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "properties": {
        "account_id": {
          "format": "uuid",
          "type": "string"
        },
        "credit_facility_id": {
          "format": "uuid",
          "type": "string"
        },
        "custody_wallet_id": {
          "format": "uuid",
          "type": [
            "string",
            "null"
          ]
        },
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "pending_credit_facility_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "initialized",
          "type": "string"
        }
      },
      "required": [
        "type",
        "id",
        "account_id",
        "credit_facility_id",
        "pending_credit_facility_id"
      ],
      "type": "object"
    },
    {
      "properties": {
        "abs_diff": {
          "$ref": "#/$defs/Satoshis"
        },
        "action": {
          "$ref": "#/$defs/CollateralAction"
        },
        "collateral_amount": {
          "$ref": "#/$defs/Satoshis"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "updated_via_manual_input",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "collateral_amount",
        "abs_diff",
        "action"
      ],
      "type": "object"
    },
    {
      "properties": {
        "abs_diff": {
          "$ref": "#/$defs/Satoshis"
        },
        "action": {
          "$ref": "#/$defs/CollateralAction"
        },
        "collateral_amount": {
          "$ref": "#/$defs/Satoshis"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "updated_via_custodian_sync",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "collateral_amount",
        "abs_diff",
        "action"
      ],
      "type": "object"
    },
    {
      "description": "This Collateral has become subject of liquidation with\n`liquidation_id`. It will renmain such until\n`ExitedLiquidation` event is emitted.",
      "properties": {
        "collateral_in_liquidation_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "liquidation_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "entered_liquidation",
          "type": "string"
        }
      },
      "required": [
        "type",
        "liquidation_id",
        "collateral_in_liquidation_account_id"
      ],
      "type": "object"
    },
    {
      "description": "Portion of this Collateral was sent to a liquidation with\n`liquidation_id`.",
      "properties": {
        "liquidation_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "sent_to_liquidation_via_manual_input",
          "type": "string"
        }
      },
      "required": [
        "type",
        "liquidation_id"
      ],
      "type": "object"
    },
    {
      "description": "This Collateral that has previously been subject of\nliquidation with `liquidation_id` is no longer subject of the\nliquidation.",
      "properties": {
        "liquidation_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "exited_liquidation",
          "type": "string"
        }
      },
      "required": [
        "type",
        "liquidation_id"
      ],
      "type": "object"
    }
  ],
  "title": "CollateralEvent"
}
