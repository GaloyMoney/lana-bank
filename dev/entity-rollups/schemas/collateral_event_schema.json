{
  "$defs": {
    "CollateralDirection": {
      "enum": [
        "Add",
        "Remove"
      ],
      "type": "string"
    },
    "CollateralLedgerAccountIds": {
      "properties": {
        "collateral_account_id": {
          "description": "Holds BTC collateral for this credit facility.",
          "format": "uuid",
          "type": "string"
        },
        "collateral_in_liquidation_account_id": {
          "description": "Holds BTC collateral for this credit facility, that is being\nliquidated.",
          "format": "uuid",
          "type": "string"
        },
        "facility_payment_holding_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "facility_proceeds_from_liquidation_account_id": {
          "description": "Holds proceeds received from liquidator for the connected\nfacility.",
          "format": "uuid",
          "type": "string"
        },
        "facility_uncovered_outstanding_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "liquidated_collateral_account_id": {
          "description": "Holds BTC collateral for this credit facility, that has\nalready been liquidated.",
          "format": "uuid",
          "type": "string"
        },
        "liquidation_proceeds_omnibus_account_id": {
          "format": "uuid",
          "type": "string"
        }
      },
      "required": [
        "collateral_account_id",
        "liquidated_collateral_account_id",
        "collateral_in_liquidation_account_id",
        "liquidation_proceeds_omnibus_account_id",
        "facility_proceeds_from_liquidation_account_id",
        "facility_uncovered_outstanding_account_id",
        "facility_payment_holding_account_id"
      ],
      "type": "object"
    },
    "LiquidationProceedsAccountIds": {
      "description": "Account IDs needed for recording proceeds from liquidation.",
      "properties": {
        "collateral_in_liquidation_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "liquidated_collateral_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "liquidation_proceeds_omnibus_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "proceeds_from_liquidation_account_id": {
          "format": "uuid",
          "type": "string"
        }
      },
      "required": [
        "liquidation_proceeds_omnibus_account_id",
        "proceeds_from_liquidation_account_id",
        "collateral_in_liquidation_account_id",
        "liquidated_collateral_account_id"
      ],
      "type": "object"
    },
    "Satoshis": {
      "format": "uint64",
      "minimum": 0,
      "type": "integer"
    }
  },
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "oneOf": [
    {
      "properties": {
        "account_ids": {
          "$ref": "#/$defs/CollateralLedgerAccountIds"
        },
        "credit_facility_id": {
          "format": "uuid",
          "type": "string"
        },
        "custody_wallet_id": {
          "format": "uuid",
          "type": [
            "string",
            "null"
          ]
        },
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "pending_credit_facility_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "initialized",
          "type": "string"
        }
      },
      "required": [
        "type",
        "id",
        "credit_facility_id",
        "account_ids",
        "pending_credit_facility_id"
      ],
      "type": "object"
    },
    {
      "properties": {
        "abs_diff": {
          "$ref": "#/$defs/Satoshis"
        },
        "collateral_amount": {
          "$ref": "#/$defs/Satoshis"
        },
        "direction": {
          "$ref": "#/$defs/CollateralDirection"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "updated_via_manual_input",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "collateral_amount",
        "abs_diff",
        "direction"
      ],
      "type": "object"
    },
    {
      "properties": {
        "abs_diff": {
          "$ref": "#/$defs/Satoshis"
        },
        "collateral_amount": {
          "$ref": "#/$defs/Satoshis"
        },
        "direction": {
          "$ref": "#/$defs/CollateralDirection"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "updated_via_custodian_sync",
          "type": "string"
        }
      },
      "required": [
        "type",
        "ledger_tx_id",
        "collateral_amount",
        "abs_diff",
        "direction"
      ],
      "type": "object"
    },
    {
      "properties": {
        "abs_diff": {
          "$ref": "#/$defs/Satoshis"
        },
        "collateral_amount": {
          "$ref": "#/$defs/Satoshis"
        },
        "direction": {
          "$ref": "#/$defs/CollateralDirection"
        },
        "liquidation_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "updated_via_liquidation",
          "type": "string"
        }
      },
      "required": [
        "type",
        "liquidation_id",
        "collateral_amount",
        "abs_diff",
        "direction"
      ],
      "type": "object"
    },
    {
      "properties": {
        "account_ids": {
          "$ref": "#/$defs/LiquidationProceedsAccountIds"
        },
        "liquidation_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "liquidation_started",
          "type": "string"
        }
      },
      "required": [
        "type",
        "liquidation_id",
        "account_ids"
      ],
      "type": "object"
    },
    {
      "properties": {
        "liquidation_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "const": "liquidation_completed",
          "type": "string"
        }
      },
      "required": [
        "type",
        "liquidation_id"
      ],
      "type": "object"
    }
  ],
  "title": "CollateralEvent"
}
