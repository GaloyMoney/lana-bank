  "definitions": {
    "CollateralAction": {
      "enum": [
        "Add",
        "Remove"
      ],
      "type": "string"
    },
    "CollateralizationState": {
      "enum": [
        "FullyCollateralized",
        "UnderMarginCallThreshold",
        "UnderLiquidationThreshold",
        "NoCollateral"
      ],
      "type": "string"
    },
    "CreditFacilityReceivable": {
      "properties": {
        "disbursed": {
          "$ref": "#/definitions/UsdCents"
        },
        "interest": {
          "$ref": "#/definitions/UsdCents"
        }
      },
      "required": [
        "disbursed",
        "interest"
      ],
      "type": "object"
    },
    "FacilityDuration": {
      "oneOf": [
        {
          "properties": {
            "type": {
              "enum": [
                "months"
              ],
              "type": "string"
            },
            "value": {
              "format": "uint32",
              "minimum": 0.0,
              "type": "integer"
            }
          },
          "required": [
            "type",
            "value"
          ],
          "type": "object"
        }
      ]
    },
    "InterestInterval": {
      "oneOf": [
        {
          "properties": {
            "type": {
              "enum": [
                "end_of_month"
