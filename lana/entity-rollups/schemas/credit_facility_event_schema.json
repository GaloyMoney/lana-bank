{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AuditEntryId": {
      "format": "int64",
      "type": "integer"
    },
    "AuditInfo": {
      "properties": {
        "audit_entry_id": {
          "$ref": "#/definitions/AuditEntryId"
        },
        "sub": {
          "type": "string"
        }
      },
      "required": [
        "audit_entry_id",
        "sub"
      ],
      "type": "object"
    },
    "CollateralizationState": {
      "enum": [
        "FullyCollateralized",
        "UnderMarginCallThreshold",
        "UnderLiquidationThreshold",
        "NoCollateral"
      ],
      "type": "string"
    },
    "CreditFacilityAccountIds": {
      "properties": {
        "collateral_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "disbursed_defaulted_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "disbursed_receivable_due_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "disbursed_receivable_not_yet_due_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "disbursed_receivable_overdue_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "facility_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "fee_income_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "interest_defaulted_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "interest_income_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "interest_receivable_due_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "interest_receivable_not_yet_due_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "interest_receivable_overdue_account_id": {
          "format": "uuid",
          "type": "string"
        }
      },
      "required": [
        "collateral_account_id",
        "disbursed_defaulted_account_id",
        "disbursed_receivable_due_account_id",
        "disbursed_receivable_not_yet_due_account_id",
        "disbursed_receivable_overdue_account_id",
        "facility_account_id",
        "fee_income_account_id",
        "interest_defaulted_account_id",
        "interest_income_account_id",
        "interest_receivable_due_account_id",
        "interest_receivable_not_yet_due_account_id",
        "interest_receivable_overdue_account_id"
      ],
      "type": "object"
    },
    "CreditFacilityReceivable": {
      "properties": {
        "disbursed": {
          "$ref": "#/definitions/UsdCents"
        },
        "interest": {
          "$ref": "#/definitions/UsdCents"
        }
      },
      "required": [
        "disbursed",
        "interest"
      ],
      "type": "object"
    },
    "FacilityDuration": {
      "oneOf": [
        {
          "properties": {
            "type": {
              "enum": [
                "months"
              ],
              "type": "string"
            },
            "value": {
              "format": "uint32",
              "minimum": 0.0,
              "type": "integer"
            }
          },
          "required": [
            "type",
            "value"
          ],
          "type": "object"
        }
      ]
    },
    "InterestInterval": {
      "oneOf": [
        {
          "properties": {
            "type": {
              "enum": [
                "end_of_month"
              ],
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "properties": {
            "type": {
              "enum": [
                "end_of_day"
              ],
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        }
      ]
    },
    "InterestPeriod": {
      "properties": {
        "end": {
          "format": "date-time",
          "type": "string"
        },
        "interval": {
          "$ref": "#/definitions/InterestInterval"
        },
        "start": {
          "format": "date-time",
          "type": "string"
        }
      },
      "required": [
        "end",
        "interval",
        "start"
      ],
      "type": "object"
    },
    "ObligationDuration": {
      "oneOf": [
        {
          "properties": {
            "type": {
              "enum": [
                "days"
              ],
              "type": "string"
            },
            "value": {
              "format": "uint64",
              "minimum": 0.0,
              "type": "integer"
            }
          },
          "required": [
            "type",
            "value"
          ],
          "type": "object"
        }
      ]
    },
    "PriceOfOneBTC": {
      "$ref": "#/definitions/UsdCents"
    },
    "Satoshis": {
      "format": "uint64",
      "minimum": 0.0,
      "type": "integer"
    },
    "TermValues": {
      "properties": {
        "accrual_cycle_interval": {
          "$ref": "#/definitions/InterestInterval"
        },
        "accrual_interval": {
          "$ref": "#/definitions/InterestInterval"
        },
        "annual_rate": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": "string"
        },
        "duration": {
          "$ref": "#/definitions/FacilityDuration"
        },
        "initial_cvl": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": "string"
        },
        "interest_due_duration_from_accrual": {
          "$ref": "#/definitions/ObligationDuration"
        },
        "liquidation_cvl": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": "string"
        },
        "margin_call_cvl": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": "string"
        },
        "obligation_liquidation_duration_from_due": {
          "anyOf": [
            {
              "$ref": "#/definitions/ObligationDuration"
            },
            {
              "type": "null"
            }
          ]
        },
        "obligation_overdue_duration_from_due": {
          "anyOf": [
            {
              "$ref": "#/definitions/ObligationDuration"
            },
            {
              "type": "null"
            }
          ]
        },
        "one_time_fee_rate": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": "string"
        }
      },
      "required": [
        "accrual_cycle_interval",
        "accrual_interval",
        "annual_rate",
        "duration",
        "initial_cvl",
        "interest_due_duration_from_accrual",
        "liquidation_cvl",
        "margin_call_cvl",
        "one_time_fee_rate"
      ],
      "type": "object"
    },
    "UsdCents": {
      "format": "uint64",
      "minimum": 0.0,
      "type": "integer"
    }
  },
  "oneOf": [
    {
      "properties": {
        "account_ids": {
          "$ref": "#/definitions/CreditFacilityAccountIds"
        },
        "amount": {
          "$ref": "#/definitions/UsdCents"
        },
        "approval_process_id": {
          "format": "uuid",
          "type": "string"
        },
        "audit_info": {
          "$ref": "#/definitions/AuditInfo"
        },
        "collateral_id": {
          "format": "uuid",
          "type": "string"
        },
        "customer_id": {
          "format": "uuid",
          "type": "string"
        },
        "disbursal_credit_account_id": {
          "format": "uuid",
          "type": "string"
        },
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "terms": {
          "$ref": "#/definitions/TermValues"
        },
        "type": {
          "enum": [
            "initialized"
          ],
          "type": "string"
        }
      },
      "required": [
        "account_ids",
        "amount",
        "approval_process_id",
        "audit_info",
        "collateral_id",
        "customer_id",
        "disbursal_credit_account_id",
        "id",
        "ledger_tx_id",
        "terms",
        "type"
      ],
      "type": "object"
    },
    {
      "properties": {
        "approval_process_id": {
          "format": "uuid",
          "type": "string"
        },
        "approved": {
          "type": "boolean"
        },
        "audit_info": {
          "$ref": "#/definitions/AuditInfo"
        },
        "type": {
          "enum": [
            "approval_process_concluded"
          ],
          "type": "string"
        }
      },
      "required": [
        "approval_process_id",
        "approved",
        "audit_info",
        "type"
      ],
      "type": "object"
    },
    {
      "properties": {
        "activated_at": {
          "format": "date-time",
          "type": "string"
        },
        "audit_info": {
          "$ref": "#/definitions/AuditInfo"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "enum": [
            "activated"
          ],
          "type": "string"
        }
      },
      "required": [
        "activated_at",
        "audit_info",
        "ledger_tx_id",
        "type"
      ],
      "type": "object"
    },
    {
      "properties": {
        "audit_info": {
          "$ref": "#/definitions/AuditInfo"
        },
        "interest_accrual_cycle_idx": {
          "format": "int32",
          "type": "integer"
        },
        "interest_accrual_id": {
          "format": "uuid",
          "type": "string"
        },
        "interest_period": {
          "$ref": "#/definitions/InterestPeriod"
        },
        "type": {
          "enum": [
            "interest_accrual_cycle_started"
          ],
          "type": "string"
        }
      },
      "required": [
        "audit_info",
        "interest_accrual_cycle_idx",
        "interest_accrual_id",
        "interest_period",
        "type"
      ],
      "type": "object"
    },
    {
      "properties": {
        "audit_info": {
          "$ref": "#/definitions/AuditInfo"
        },
        "interest_accrual_cycle_idx": {
          "format": "int32",
          "type": "integer"
        },
        "ledger_tx_id": {
          "format": "uuid",
          "type": "string"
        },
        "obligation_id": {
          "format": "uuid",
          "type": "string"
        },
        "type": {
          "enum": [
            "interest_accrual_cycle_concluded"
          ],
          "type": "string"
        }
      },
      "required": [
        "audit_info",
        "interest_accrual_cycle_idx",
        "ledger_tx_id",
        "obligation_id",
        "type"
      ],
      "type": "object"
    },
    {
      "properties": {
        "audit_info": {
          "$ref": "#/definitions/AuditInfo"
        },
        "collateral": {
          "$ref": "#/definitions/Satoshis"
        },
        "collateralization_state": {
          "$ref": "#/definitions/CollateralizationState"
        },
        "outstanding": {
          "$ref": "#/definitions/CreditFacilityReceivable"
        },
        "price": {
          "$ref": "#/definitions/PriceOfOneBTC"
        },
        "type": {
          "enum": [
            "collateralization_state_changed"
          ],
          "type": "string"
        }
      },
      "required": [
        "audit_info",
        "collateral",
        "collateralization_state",
        "outstanding",
        "price",
        "type"
      ],
      "type": "object"
    },
    {
      "properties": {
        "audit_info": {
          "$ref": "#/definitions/AuditInfo"
        },
        "collateralization_ratio": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": [
            "string",
            "null"
          ]
        },
        "type": {
          "enum": [
            "collateralization_ratio_changed"
          ],
          "type": "string"
        }
      },
      "required": [
        "audit_info",
        "type"
      ],
      "type": "object"
    },
    {
      "properties": {
        "audit_info": {
          "$ref": "#/definitions/AuditInfo"
        },
        "type": {
          "enum": [
            "completed"
          ],
          "type": "string"
        }
      },
      "required": [
        "audit_info",
        "type"
      ],
      "type": "object"
    }
  ],
  "title": "CreditFacilityEvent"
}
