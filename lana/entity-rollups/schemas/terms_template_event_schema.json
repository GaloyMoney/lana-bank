{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AuditEntryId": {
      "format": "int64",
      "type": "integer"
    },
    "AuditInfo": {
      "properties": {
        "audit_entry_id": {
          "$ref": "#/definitions/AuditEntryId"
        },
        "sub": {
          "type": "string"
        }
      },
      "required": [
        "audit_entry_id",
        "sub"
      ],
      "type": "object"
    },
    "FacilityDuration": {
      "oneOf": [
        {
          "properties": {
            "type": {
              "enum": [
                "months"
              ],
              "type": "string"
            },
            "value": {
              "format": "uint32",
              "minimum": 0.0,
              "type": "integer"
            }
          },
          "required": [
            "type",
            "value"
          ],
          "type": "object"
        }
      ]
    },
    "InterestInterval": {
      "oneOf": [
        {
          "properties": {
            "type": {
              "enum": [
                "end_of_month"
              ],
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        },
        {
          "properties": {
            "type": {
              "enum": [
                "end_of_day"
              ],
              "type": "string"
            }
          },
          "required": [
            "type"
          ],
          "type": "object"
        }
      ]
    },
    "ObligationDuration": {
      "oneOf": [
        {
          "properties": {
            "type": {
              "enum": [
                "days"
              ],
              "type": "string"
            },
            "value": {
              "format": "uint64",
              "minimum": 0.0,
              "type": "integer"
            }
          },
          "required": [
            "type",
            "value"
          ],
          "type": "object"
        }
      ]
    },
    "TermValues": {
      "properties": {
        "accrual_cycle_interval": {
          "$ref": "#/definitions/InterestInterval"
        },
        "accrual_interval": {
          "$ref": "#/definitions/InterestInterval"
        },
        "annual_rate": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": "string"
        },
        "duration": {
          "$ref": "#/definitions/FacilityDuration"
        },
        "initial_cvl": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": "string"
        },
        "interest_due_duration_from_accrual": {
          "$ref": "#/definitions/ObligationDuration"
        },
        "liquidation_cvl": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": "string"
        },
        "margin_call_cvl": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": "string"
        },
        "obligation_liquidation_duration_from_due": {
          "anyOf": [
            {
              "$ref": "#/definitions/ObligationDuration"
            },
            {
              "type": "null"
            }
          ]
        },
        "obligation_overdue_duration_from_due": {
          "anyOf": [
            {
              "$ref": "#/definitions/ObligationDuration"
            },
            {
              "type": "null"
            }
          ]
        },
        "one_time_fee_rate": {
          "pattern": "^-?[0-9]+(\\.[0-9]+)?$",
          "type": "string"
        }
      },
      "required": [
        "accrual_cycle_interval",
        "accrual_interval",
        "annual_rate",
        "duration",
        "initial_cvl",
        "interest_due_duration_from_accrual",
        "liquidation_cvl",
        "margin_call_cvl",
        "one_time_fee_rate"
      ],
      "type": "object"
    }
  },
  "oneOf": [
    {
      "properties": {
        "audit_info": {
          "$ref": "#/definitions/AuditInfo"
        },
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "type": {
          "enum": [
            "initialized"
          ],
          "type": "string"
        },
        "values": {
          "$ref": "#/definitions/TermValues"
        }
      },
      "required": [
        "audit_info",
        "id",
        "name",
        "type",
        "values"
      ],
      "type": "object"
    },
    {
      "properties": {
        "audit_info": {
          "$ref": "#/definitions/AuditInfo"
        },
        "type": {
          "enum": [
            "term_values_updated"
          ],
          "type": "string"
        },
        "values": {
          "$ref": "#/definitions/TermValues"
        }
      },
      "required": [
        "audit_info",
        "type",
        "values"
      ],
      "type": "object"
    }
  ],
  "title": "TermsTemplateEvent"
}
